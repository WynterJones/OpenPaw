{
  "id": "{{.ToolID}}",
  "name": "{{.Name | jsonEscape}}",
  "description": "{{.Description | jsonEscape}}",
  "version": "1.0.0",
  "health_check": "/health",
  "endpoints": [
    {
      "method": "GET",
      "path": "/holidays",
      "description": "Get public holidays for a country and year",
      "query_params": [
        {"name": "country", "type": "string", "required": true, "description": "ISO 3166-1 alpha-2 country code (e.g. US, DE, GB)"},
        {"name": "year", "type": "integer", "required": true, "description": "Year (e.g. 2025)"}
      ],
      "response": {"holidays": "Array of holidays with date, localName, name, countryCode, fixed, global, types"}
    },
    {
      "method": "GET",
      "path": "/countries",
      "description": "List all available countries",
      "response": {"countries": "Array of countries with countryCode and name"}
    },
    {
      "method": "GET",
      "path": "/next",
      "description": "Get next upcoming public holidays for a country",
      "query_params": [
        {"name": "country", "type": "string", "required": true, "description": "ISO 3166-1 alpha-2 country code (e.g. US, DE, GB)"}
      ],
      "response": {"holidays": "Array of upcoming holidays with date, localName, name, countryCode, fixed, global, types"}
    }
  ],
  "env": [],
  "widget": {
    "enabled": true,
    "types": ["auto"]
  }
}
