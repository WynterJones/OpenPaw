{
  "id": "{{.ToolID}}",
  "name": "{{.Name | jsonEscape}}",
  "description": "{{.Description | jsonEscape}}",
  "version": "1.0.0",
  "health_check": "/health",
  "endpoints": [
    {
      "method": "GET",
      "path": "/current",
      "description": "Get current air quality for a city",
      "query_params": [
        {"name": "city", "type": "string", "required": true, "description": "City name"}
      ],
      "response": {"aqi": "US AQI value", "aqi_category": "AQI category (Good/Moderate/etc)", "pm2_5": "PM2.5 level", "pm10": "PM10 level", "ozone": "Ozone level"}
    },
    {
      "method": "GET",
      "path": "/forecast",
      "description": "Get AQI forecast by coordinates",
      "query_params": [
        {"name": "lat", "type": "number", "required": true, "description": "Latitude"},
        {"name": "lon", "type": "number", "required": true, "description": "Longitude"},
        {"name": "days", "type": "integer", "required": false, "description": "Number of forecast days (1-5, default 5)"}
      ],
      "response": {"forecast": "Array of daily summaries with max AQI and avg PM2.5"}
    }
  ],
  "env": [],
  "widget": {
    "enabled": true,
    "types": ["auto"]
  }
}
