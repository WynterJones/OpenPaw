{
  "id": "{{.ToolID}}",
  "name": "{{.Name | jsonEscape}}",
  "description": "{{.Description | jsonEscape}}",
  "version": "1.0.0",
  "health_check": "/health",
  "endpoints": [
    {
      "method": "POST",
      "path": "/tts",
      "description": "Convert text to speech using OpenAI TTS",
      "body": {
        "text": "Text to convert to speech (required)",
        "voice": "Voice: alloy, echo, fable, onyx, nova, shimmer (default: alloy)",
        "model": "Model: tts-1 or tts-1-hd (default: tts-1)",
        "speed": "Speed 0.25-4.0 (default: 1.0)",
        "response_format": "Format: mp3, opus, aac, flac (default: mp3)"
      },
      "response": {"file_path": "Path to generated audio file", "voice": "Voice used", "model": "Model used", "content_type": "Audio MIME type"}
    },
    {
      "method": "GET",
      "path": "/voices",
      "description": "List available OpenAI TTS voices",
      "response": {"voices": "Array of voices with voice_id and description"}
    }
  ],
  "env": ["OPENAI_API_KEY"],
  "widget": {
    "enabled": true,
    "types": ["auto"]
  }
}
