func getPaperDimensions(paperSize string) (float64, float64) {
	key := strings.ToLower(strings.TrimSpace(paperSize))
	if dims, ok := paperSizes[key]; ok {
		return dims[0], dims[1]
	}
	// Default to A4
	return paperSizes["a4"][0], paperSizes["a4"][1]
}

func parseMarginCM(marginStr string) float64 {
	marginStr = strings.TrimSpace(marginStr)
	if marginStr == "" {
		// Default 1cm in inches
		return 1.0 / 2.54
	}

	// Strip "cm" suffix if present
	marginStr = strings.TrimSuffix(marginStr, "cm")
	marginStr = strings.TrimSpace(marginStr)

	cm, err := strconv.ParseFloat(marginStr, 64)
	if err != nil || cm < 0 {
		// Default 1cm in inches
		return 1.0 / 2.54
	}

	// Convert cm to inches
	return cm / 2.54
}

// jsStringLiteral converts a Go string to a JavaScript string literal,
// properly escaping special characters.
func jsStringLiteral(s string) string {
	var b strings.Builder
	b.WriteByte('"')
	for _, r := range s {
		switch r {
		case '"':
			b.WriteString(`\"`)
		case '\\':
			b.WriteString(`\\`)
		case '\n':
			b.WriteString(`\n`)
		case '\r':
			b.WriteString(`\r`)
		case '\t':
			b.WriteString(`\t`)
		case '<':
			// Escape to prevent </script> breaking
			b.WriteString(`\x3c`)
		default:
			b.WriteRune(r)
		}
	}
	b.WriteByte('"')
	return b.String()
}
