{
  "id": "{{.ToolID}}",
  "name": "{{.Name | jsonEscape}}",
  "description": "Delegate coding tasks to the OpenAI Codex CLI. Runs with --full-auto for unattended execution. Analyze, plan, and implement in external codebases.",
  "version": "1.0.0",
  "health_check": "/health",
  "endpoints": [
    {
      "method": "POST",
      "path": "/plan",
      "description": "Read-only analysis of a codebase (sandboxed, no file writes)",
      "body": {"directory": "Absolute path to project directory", "prompt": "Analysis prompt", "model": "Optional model name"},
      "response": {"success": "boolean", "result": "Codex analysis result", "mode": "plan"}
    },
    {
      "method": "POST",
      "path": "/implement",
      "description": "Full implementation with file write access",
      "body": {"directory": "Absolute path to project directory", "prompt": "Implementation prompt", "model": "Optional model name"},
      "response": {"success": "boolean", "result": "Codex implementation result", "mode": "implement"}
    },
    {
      "method": "POST",
      "path": "/ask",
      "description": "Quick single-turn question",
      "body": {"directory": "Absolute path to project directory", "prompt": "Question to ask", "model": "Optional model name"},
      "response": {"success": "boolean", "result": "Codex response", "mode": "ask"}
    },
    {
      "method": "GET",
      "path": "/status",
      "description": "Check if Codex CLI is available",
      "response": {"available": "boolean", "path": "Path to codex binary"}
    }
  ],
  "env": [],
  "widget": {
    "enabled": true,
    "types": ["auto"]
  }
}
